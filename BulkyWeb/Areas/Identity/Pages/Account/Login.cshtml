@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="m-5 flex flex-col items-center">
    <div class="m-3 p-3 bg-gradient-to-r from-blue-500 to-slate-950 shadow-lg rounded-lg">
        <h1 class="text-center text-4xl font-extrabold text-white drop-shadow-lg tracking-wider">
            @ViewData["Title"]
        </h1>
    </div>
    <form id="account" method="post" class="flex flex-col gap-6 bg-blue-800 p-5 items-center rounded-md mt-7 border shadow-md border-gray-400 shadow-gray-400">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="flex flex-col gap-2.5">
            <label asp-for="Input.Email" class="text-start font-bold text-white text-2xl">Email</label>
            <input asp-for="Input.Email" class="text-start p-2 text-3xl rounded-lg text-gray-950"
                   autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="flex flex-col gap-2.5">
            <label asp-for="Input.Password" class="text-start font-bold text-white text-2xl">Password</label>
            <input asp-for="Input.Password" class="text-start p-2 text-3xl rounded-lg text-gray-950"
                   autocomplete="current-password" aria-required="true" placeholder="password" />

            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div>
            <button id="login-submit" type="submit"
                    class="bg-white text-center py-1 px-4 rounded-xl font-semibold text-xl text-black">
                Log in
            </button>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
