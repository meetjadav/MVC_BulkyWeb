@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="flex space-x-5 justify-center items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        /*
        <li>
            <a id="manage" class="rounded p-1 font-bold text-white hover:bg-blue-800" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> @UserManager.GetUserName(User)!</a>
        </li> */
        
        <li>
            <span class="rounded p-1 font-bold text-white"> @UserManager.GetUserName(User)!</span>
        </li> 
        <li>
            <form id="logoutForm" class="rounded p-1 font-bold text-white hover:bg-blue-800" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li>
            <a class="rounded p-1 font-bold text-white hover:bg-blue-800" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a class="rounded p-1 font-bold text-white hover:bg-blue-800" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
